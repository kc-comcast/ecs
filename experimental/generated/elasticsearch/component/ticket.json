{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-ticket.html",
    "ecs_version": "2.0.0-dev+exp"
  },
  "template": {
    "mappings": {
      "properties": {
        "ticket": {
          "properties": {
            "assignee": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "created": {
              "type": "date"
            },
            "description": {
              "properties": {
                "long": {
                  "norms": false,
                  "type": "text"
                },
                "short": {
                  "norms": false,
                  "type": "text"
                }
              }
            },
            "details": {
              "type": "object"
            },
            "number": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "priority": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "requester": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "severity": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "state": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "status": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "submitter": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "tags": {
              "type": "object"
            },
            "type": {
              "ignore_above": 1024,
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}